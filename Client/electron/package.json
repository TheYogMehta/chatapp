{
  "name": "chatapp",
  "version": "1.0.0",
  "description": "Electron chatapp client using Capacitor",
  "author": {
    "name": "TheYogMehta",
    "email": "mehtayog2005@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheYogMehta/chatapp"
  },
  "license": "MIT",
  "main": "build/src/index.js",
  "scripts": {
    "build": "tsc && electron-rebuild",
    "electron:start": "npm run build && electron --inspect=5858 ./",
    "electron:postinstall": "electron-builder install-app-deps",
    "electron:pack": "npm run build && electron-builder install-app-deps && electron-builder build",
    "electron:make": "npm run build && electron-builder install-app-deps && electron-builder build -p always --win --linux"
  },
  "dependencies": {
    "@capacitor-community/electron": "^5.0.1",
    "@capacitor-community/sqlite": "^7.0.2",
    "better-sqlite3-multiple-ciphers": "^12.5.0",
    "chokidar": "~3.5.3",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "electron-is-dev": "~2.0.0",
    "electron-json-storage": "^4.6.0",
    "electron-serve": "~1.1.0",
    "electron-unhandled": "~4.0.1",
    "electron-updater": "^5.3.0",
    "electron-window-state": "^5.0.3",
    "jszip": "^3.10.1",
    "keytar": "^7.9.0",
    "node-fetch": "^2.6.7",
    "serve-handler": "^6.1.6"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/crypto-js": "^4.2.2",
    "@types/electron-json-storage": "^4.5.4",
    "@types/serve-handler": "^6.1.4",
    "electron": "^29.4.6",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "engines": {
    "node": "22",
    "npm": ">=11.7.0"
  },
  "build": {
    "appId": "com.chatapp",
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "assets/**/*",
      "build/**/*",
      "capacitor.config.*",
      "app/**/*"
    ],
    "nsis": {
      "allowElevation": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "nsis",
      "icon": "assets/appIcon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/appIcon.png"
    },
    "publish": null
  }
}
